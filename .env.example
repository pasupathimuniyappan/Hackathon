# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development
DEBUG=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:9090,http://localhost:5173

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Analysis Configuration
MAX_PROMPT_LENGTH=5000
MIN_PROMPT_LENGTH=5
ENABLE_LLM_ANALYSIS=true

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
